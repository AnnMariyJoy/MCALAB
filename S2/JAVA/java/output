import java.io.*;public class mainCopy {	public static void main(String[] args) {			try {			FileReader fr = new FileReader("/home/lab2/Desktop/java/mainCopy.java");						BufferedReader br = new BufferedReader(fr);			FileWriter fw = new FileWriter("/home/lab2/Desktop/java/main.txt", true);			String s; 	while ((s = br.readLine()) != null) {				fw.write(s); 				fw.flush();			}	br.close();			fw.close();            			System.out.println("FILE COPIED");		} catch (IOException e) {						System.out.println("An error occurred. . ."+e);		}	}}
